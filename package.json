        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.43.1",
        "express": "^5.2.1",
        "pg": "^8.15.6",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "tsx": "^4.19.3",
        "twitter-api-v2": "1.20.2",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^20.19.32",
        "@types/pg": "^8.11.14",
        "drizzle-kit": "^0.31.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
