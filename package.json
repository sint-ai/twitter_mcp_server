        "pg": "^8.15.6",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "tsx": "^4.19.3",
        "twitter-api-v2": "^1.20.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^20.11.24",
        "@types/pg": "^8.11.14",
        "drizzle-kit": "^0.31.0",
